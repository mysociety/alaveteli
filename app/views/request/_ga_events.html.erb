<% if flash[:request_sent] %>
  <% content_for :ga_pageview do %>
    ga('send', 'pageview', '<%= show_new_request_path(@info_request.url_title) %>');
  <% end %>
<% else %>
  <% content_for :ga_pageview do %>
    ga('send', 'pageview', '<%= show_request_path(@info_request.url_title) %>');
  <% end %>
<% end %>
