<% if draft.id %>
  <%= form_tag(update_bodies_alaveteli_pro_draft_info_request_batch_path(draft.id),
               :method => :put,
               :class => 'add-authority-to-batch__form js-add-authority-to-batch-form',
               'data-body-id' => authority_id) do %>
    <% unless query.blank? %>
      <%= hidden_field_tag(:authority_query, query) %>
    <% end %>
    <% unless page.blank? %>
      <%= hidden_field_tag(:page, page) %>
    <% end %>
    <%= hidden_field_tag(:add_body_id, authority_id) %>
    <input type="submit"
           value="<%= _('+ Add') %>"
           class="add-authority-to-batch__form__submit js-add-authority-to-batch-submit">
  <% end %>
<% else %>
  <%= form_for(draft,
               :html => {'class' => 'add-authority-to-batch__form js-add-authority-to-batch-form',
                         'data-body-id' => authority_id}) do |f| %>
    <% unless query.blank? %>
      <%= hidden_field_tag(:authority_query, query) %>
    <% end %>
    <% unless page.blank? %>
      <%= hidden_field_tag(:page, page) %>
    <% end %>
    <%= f.hidden_field(:public_body_ids, value: authority_id) %>
    <input type="submit"
           value="<%= _('+ Add') %>"
           class="add-authority-to-batch__form__submit js-add-authority-to-batch-submit">
  <% end %>
<% end %>
