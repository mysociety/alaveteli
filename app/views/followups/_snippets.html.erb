<% if @refusal_advice.answers %>
  <p>Here are some snippets that may help you <strong>challenge a refusal</strong>:</p>
<% else %>
  <p><strong>Challenging a refusal?</strong> Here are some snippets that may help:</p>
<% end %>

<div class="snippet-library">
  <div class="snippet-library__filters">
    <!-- TODO: Non-JavaScript fallback? -->
    <label for="snippet-relation">Snippets related to</label>
    <select id="snippet-relation">
      <% if @refusal_advice.answers %>
        <option value="<%= @refusal_advice.answers.join(' ') %>">my previous answers</option>
      <% end %>
      <option value="all">any section</option>
      <!-- TODO: Actual list of sections -->
      <option>Section 12</option>
      <option>Section 14</option>
      <option>Section 16</option>
    </select>
  </div>
  <div class="snippet-library__snippets">
    <%= render @refusal_advice.snippets %>
  </div>
</div>
