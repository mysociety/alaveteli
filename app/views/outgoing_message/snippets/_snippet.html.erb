<div class="snippet" data-tags="<%= snippet.tag_string %>">
  <div class="snippet__preview js-snippet-preview">
    <h3><%= snippet.name %></h3>
    <details>
      <summary>
        <p class="snippet__preview__more">
          <%= truncate snippet.body, length: 150 %>
          <strong><%= _('Read more') %></strong>
        </p>
        <p class="snippet__preview__less"><%= _('Close preview') %></p>
      </summary>
      <%= simple_format snippet.body %>
    </details>
  </div>

  <button class="snippet__action button"
          data-clipboard-text="<%= escape_once(snippet.body) %>"
          data-clipboard-success="<%= _('Copied!') %>">
    <svg viewBox="0 0 16 16"
         version="1.1"
         width="16"
         height="16"
         aria-hidden="true">
      <path fill="currentColor"
            fill-rule="evenodd"
            d="M5.75 1a.75.75 0 00-.75.75v3c0 .414.336.75.75.75h4.5a.75.75 0
               00.75-.75v-3a.75.75 0 00-.75-.75h-4.5zm.75
               3V2.5h3V4h-3zm-2.874-.467a.75.75 0 00-.752-1.298A1.75 1.75 0 002
               3.75v9.5c0 .966.784 1.75 1.75 1.75h8.5A1.75 1.75 0 0014
               13.25v-9.5a1.75 1.75 0 00-.874-1.515.75.75 0 10-.752 1.298.25.25
               0 01.126.217v9.5a.25.25 0 01-.25.25h-8.5a.25.25 0
               01-.25-.25v-9.5a.25.25 0 01.126-.217z">
      </path>
    </svg>
    <%= _('Copy') %>
  </button>
</div>
