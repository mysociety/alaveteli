<%
  existing_track = local_assigns.fetch(:existing_track) do
    TrackThing.find_existing(@user, track_thing) if @user
  end
%>
<% if !own_request %>
  <% if existing_track %>
    <div class="feed_link feed_link_<%= location %>">
      <%= link_to _("Unfollow"), { :controller => 'track', :action => 'update', :track_id => existing_track.id, :track_medium => "delete", :r => request.fullpath }, :class => "link_button_green track-request-action" %>
    </div>
  <% elsif track_thing %>
    <div class="feed_link feed_link_<%= location %>">
      <%= link_to _("Follow"), do_track_path(track_thing), :class => "link_button_green track-request-action" %>
    </div>
  <% end %>
<% end %>
