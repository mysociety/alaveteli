<%= raw @message.strip %>

---------------------------------------------------------------------
<%= _('Message sent using {{site_name}} contact form, ',
      :site_name => site_name) %>
<%= @logged_in_user ?
  _("logged in as user {{user_name}}", :user_name => user_url(@logged_in_user)) :
  _("not logged in") %>
<% if @last_request %>
<%= _('Last request viewed: {{request_url}}',
      :request_url => request_url(@last_request)) %>
<% end %>
<% if @last_body %>
<%= _('Last authority viewed: {{authority_url}}',
      :authority_url => public_body_url(@last_body)) %>
<% end %>---------------------------------------------------------------------
