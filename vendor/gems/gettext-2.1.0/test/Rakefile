$LOAD_PATH.unshift "../lib"

task :default => :test

desc "Create mo files"
task :makemo do
  require 'gettext/tools'
  GetText.create_mofiles(:mo_root => "locale")
end

desc 'Run all tests'
task :test do
   Dir.glob("**/test_*.rb").each do |path|
    puts ""
    ruby "-I../lib:../../locale/lib -rubygems #{path}"
   end
end
